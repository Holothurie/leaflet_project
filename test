<div id="map" style="width: 100%; height: 100%"></div>
<script
src="http://cdn.leafletjs.com/leaflet-0.7/leaflet.js">
</script>



<script>
var map = L.map('map').setView([52.519061,13.401078], 15);
var mapLink1 ='<a href="http://openstreetmap.de">OpenStreetMap</a>';
var mapLink2 = '<a href="http://thunderforest.de">Thunderforest</a>';
var userLink = '&nbsp by Meike Schwabe';

var osm = L.tileLayer('http://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png',
{attribution: 'Map data &copy' + mapLink1 + userLink}).addTo(map);

var osmsw = L.tileLayer('http://{s}.www.toolserver.org/tiles/bw-mapnik/{z}/{x}/{y}.png', {attribution:
'Map data &copy'+ mapLink1 + userLink});

var cycle = L.tileLayer('http://{s}.tile.thunderforest.com/cycle/{z}/{x}/{y}.png', {attribution:
'Map data &copy'+ mapLink2 + userLink});

var outdoor = L.tileLayer('http://{s}.tile.thunderforest.com/cycle/{z}/{x}/{y}.png', {attribution:
'Map data &copy'+ mapLink2 + userLink});

var landscape = L.tileLayer('http://{s}.tile.thunderforest.com/landscape/{z}/{x}/{y}.png', {attribution:
'Map data &copy'+ mapLink2 + userLink});

var esri = L.tileLayer('http://server.arcgisonline.com/ArcGIS/rest/services/World_Imagery/MapServer\/tile/{z}/{y}/{x}.png', {attribution:
'Map data &copy'+ mapLink2 + userLink});

var esriocean = L.tileLayer('http://server.arcgisonline.com/ArcGIS/rest/services/Ocean_Basemap/MapServer\/tile/{z}/{y}/{x}.png', {attribution:
'Map data &copy'+ mapLink2 + userLink});


var baseLayer = {"OSM Base": osm, "OSM SW": osmsw, "Cyclemap": cycle, "Outdoor": outdoor, "Landscape": landscape, "Esri": esri, "Esri Ocean": esriocean, "GoogleSat": google_map};

L.control.layers(baseLayer).addTo(map);
</script>
</body>
